<tables>
<table>
<name>vtiger_msgtemplate</name>
<sql><![CDATA[CREATE TABLE IF NOT EXISTS `vtiger_msgtemplate` (
  `msgtemplateid` int(11) NOT NULL DEFAULT '0',
  `reference` varchar(100) DEFAULT NULL,
  `msgt_type` varchar(100) DEFAULT NULL,
  `msgt_status` varchar(100) DEFAULT NULL,
  `msgt_language` varchar(100) DEFAULT NULL,
  `msgt_module` varchar(100) DEFAULT NULL,
  `msgt_fields` varchar(150) DEFAULT NULL,
  `msgt_metavars` varchar(150) DEFAULT NULL,
  `subject` text,
  `template` mediumtext,
  `templateonlytext` text,
  `tags` text,
  `msgt_category` varchar(100) DEFAULT '--None--',
  PRIMARY KEY (`msgtemplateid`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;]]></sql>
</table>
